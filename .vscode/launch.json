    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rrc'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rrc",
                    "--package=rrc"
                ],
                "filter": {
                    "name": "rrc",
                    "kind": "bin"
                }
            },
            "args": [
                "--input",
                "tests/control_flow/if.rs"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}